<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_fav">

    <fragment
        android:id="@+id/navigation_fav"
        android:name="com.example.testmenu.fragmentMenu.FavoritoFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_fav" />

    <fragment
        android:id="@+id/navigation_perfil"
        android:name="com.example.testmenu.fragmentMenu.ProfileFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.testmenu.fragmentMenu.ChatFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_inicio"
        android:name="com.example.testmenu.fragmentMenu.InicioFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_chat" />
</navigation>