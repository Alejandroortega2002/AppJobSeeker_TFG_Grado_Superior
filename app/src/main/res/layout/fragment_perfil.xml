<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negroFondo"
    tools:context=".ui.perfil.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="410dp"
        android:layout_height="161dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_pag_principales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtNumValoraciones"
            android:layout_width="98dp"
            android:layout_height="29dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="36dp"
            android:text="xxx"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtValorado"
            android:layout_width="107dp"
            android:layout_height="31dp"
            android:layout_marginEnd="26dp"
            android:text="Valoraciones"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNumValoraciones" />

        <TextView
            android:id="@+id/txtNumofertas"
            android:layout_width="98dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="92dp"
            android:text="xxx"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtOfertas"
            android:layout_width="98dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:text="Tus ofertas"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNumofertas" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtNombreUsr"
        android:layout_width="134dp"
        android:layout_height="36dp"
        android:layout_marginStart="138dp"
        android:layout_marginEnd="139dp"
        android:text="Nombre"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/txtNickUsr"
        android:layout_width="182dp"
        android:layout_height="37dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="36dp"
        android:text="user1234"
        android:textAlignment="center"
        android:textColor="#A1A1A1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="250dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            app:cardCornerRadius="250dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <ImageView
                android:id="@+id/imagenUsr"
                android:layout_width="123dp"
                android:layout_height="123dp"
                android:scaleType="centerCrop"
                android:src="@drawable/usuario" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnCerrarS"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="#FFFFFF"
        android:text="Cerrar sesión"
        android:textColor="@color/azulGeneral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTelfUsr" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="16dp"
        android:text="Editar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTelfUsr" />

    <Button
        android:id="@+id/btnMisOfertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="139dp"
        android:text="Mis ofertas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNickUsr" />

    <TextView
        android:id="@+id/txtCorreoUsr"
        android:layout_width="261dp"
        android:layout_height="26dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:text="correoe@gmail.com"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCorreo" />

    <TextView
        android:id="@+id/textCorreo"
        android:layout_width="261dp"
        android:layout_height="26dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="75dp"
        android:text="correo electrónico"
        android:textColor="#BCBCBC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMisOfertas" />

    <TextView
        android:id="@+id/textViewTelf"
        android:layout_width="261dp"
        android:layout_height="26dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="75dp"
        android:text="teléfono"
        android:textColor="#BCBCBC"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoUsr" />

    <TextView
        android:id="@+id/textTelfUsr"
        android:layout_width="261dp"
        android:layout_height="29dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:text="123456789"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTelf" />


</androidx.constraintlayout.widget.ConstraintLayout>