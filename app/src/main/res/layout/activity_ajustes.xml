<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negroFondo"
    tools:context=".activities.AjustesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/volver_perfil"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="61dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_step_back" />
        <TextView
            android:id="@+id/txtCuenta"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="CUENTA"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPerfil"
                    android:layout_width="332dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_mirror_back"
                    android:text="Editar perfil"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtResetPWD"
                    android:layout_width="332dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Restablecer contraseña"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:clickable="true"

                    android:drawableRight="@drawable/ic_mirror_back"

                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCloseSesion"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:text="Cerrar sesión"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDeletePerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:text="Eliminar cuenta"
                    android:textColor="@color/azulGeneral"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/txtExp"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="EXPERIENCIA"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:orientation="vertical">

            <!--            <de.hdodenhof.circleimageview.CircleImageView-->
            <!--                android:layout_width="97dp"-->
            <!--                android:layout_height="87dp"-->
            <!--                android:layout_marginLeft="30dp"-->
            <!--                android:layout_marginTop="20dp"-->

            <!--                android:src="@drawable/foto_registro"-->
            <!--                app:civ_border_color="@color/white"-->
            <!--                app:civ_border_width="5dp"-->
            <!--                app:civ_circle_background_color="@color/azulGeneral"-->
            <!--                tools:ignore="MissingClass" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch2"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Tema: Oscuro"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtIdioma"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:text="Idioma"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/idioma"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtOtros"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="OTROS"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--            <de.hdodenhof.circleimageview.CircleImageView-->
            <!--                android:layout_width="97dp"-->
            <!--                android:layout_height="87dp"-->
            <!--                android:layout_marginLeft="30dp"-->
            <!--                android:layout_marginTop="20dp"-->

            <!--                android:src="@drawable/foto_registro"-->
            <!--                app:civ_border_color="@color/white"-->
            <!--                app:civ_border_width="5dp"-->
            <!--                app:civ_circle_background_color="@color/azulGeneral"-->
            <!--                tools:ignore="MissingClass" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPolitica"
                    android:layout_width="332dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:drawableRight="@drawable/ic_mirror_back"
                    android:text="Política y Privacidad"
                    android:textColor="@color/white"
                    android:textSize="15dp"

                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTerminos"
                    android:layout_width="332dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:drawableRight="@drawable/ic_mirror_back"
                    android:text="Terminos y Condiciones"
                    android:textColor="@color/white"
                    android:textSize="15dp"

                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>

