<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negroFondo"
    tools:context=".activities.AjustesActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/volver_perfil"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="61dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_step_back" />

        <TextView
            android:id="@+id/txtCuenta"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="CUENTA"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="17dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPerfil"
                    android:layout_width="332dp"
                    android:layout_height="32dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_mirror_back"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Editar perfil"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtResetPWD"
                    android:layout_width="332dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:text="Restablecer contraseña"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="15dp"
                    android:clickable="true"

                    android:drawableRight="@drawable/ic_mirror_back"

                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCloseSesion"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:text="Cerrar sesión"
                    android:textSize="15dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDeletePerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:text="Eliminar cuenta"
                    android:textColor="@color/azulGeneral"
                    android:textSize="15dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

